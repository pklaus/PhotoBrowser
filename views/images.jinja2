{% extends "base.jinja2" %}

{% block title %}{% if album %}Album {{album}}{% else %}All Images{% endif %}{% endblock %}

{% block body_class %}images{% endblock %}

{% block content %}
  {% if album %}
    <a href="/albums">â†‘ Show All Albums</a>
    {% if album|extract_date %}
      <h3><strong>{{ album|extract_date|format_date }}</strong> - {{ album|remove_date }}</h3>
    {% else %}
      <h3>{{ album }}</h3>
    {% endif %}
  {% endif %}
  {% for image in images %}
    <a name="{{ image }}"></a>
    <a href="/show/{{ image }}">
      <img src="/api/image/scaled/{{ thumb_height }}/{{ image }}">
    </a>
  {% endfor %}
{% endblock %}



