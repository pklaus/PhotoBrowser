{% extends "base.jinja2" %}

{% block title %}{% if album %}Album {{album}}{% else %}All Images{% endif %}{% endblock %}

{% block body_class %}images{% endblock %}

{% block content %}
  {% if album %}
    <a href='/images'>Show All Images</a> | <a href='/albums'>Show All Albums</a>
    <h3>Album: {{ album }}</h3>
  {% endif %}
  {% for image in images %}
    <a name='{{ image }}'></a>
    <a href='/show/{{ image }}'>
      <img src='/api/image/scaled/{{ thumb_height }}/{{ image }}'>
    </a>
  {% endfor %}
{% endblock %}



