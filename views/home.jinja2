{% extends "base.jinja2" %}

{% block title %}Home{% endblock %}

{% block body_class %}home{% endblock %}

{% block head %}
  {{ super() }}
  <style type="text/css">
    .important { color: #336699; }
  </style>
{% endblock %}

{% block content %}
  <h1>Albums served by PhotoBrowser</h1>
  <h3>Navigation</h3>
  <ul>
    <li><a href="/albums">Show All Albums</a></li>
  </ul>
  <h3>Some random chosen images:</h3>
  {% for image in images %}
    <a name="{{ image }}"></a>
    <a href="/show/{{ image }}">
      <img src="/api/image/scaled/{{ thumb_height }}/{{ image }}">
    </a>
  {% endfor %}
{% endblock %}



